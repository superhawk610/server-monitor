doctype html
html
  head
    title Server Monitor - Backups
    include includes/head.pug
      
  body
    include includes/navigation.pug
    #page-wrapper
      h4 AWS Glacier Storage
      if Object.keys(activeJobs).length
        h5 Active Jobs
        ul
          each j in Object.keys(activeJobs)
            li!= 'Backup Name: ' + activeJobs[j].name + '<br>Start Date: ' + moment(activeJobs[j].date).format('MMMM Do YYYY, h:mm:ss a') + '<br><span style="color: #888">Job ID: ' + j + '</span>'
      h5 Existing Backups
      ul
        each b in backups
          li!= 'Backup Name: ' + b.name + '<br>Backup Date: ' + moment(b.date).format('MMMM Do YYYY, h:mm:ss a') + '<br><span style="color: #ccc">Archive ID: ' + b.id + '</span>'

    include includes/foot.pug